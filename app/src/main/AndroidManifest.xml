<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="weatherapp.a23sokolov.com.weatherapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="weatherapp.a23sokolov.com.WeatherApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="weatherapp.a23sokolov.com.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="weatherapp.a23sokolov.com.view.ReportActivity"
            android:parentActivityName="weatherapp.a23sokolov.com.view.MainActivity" >

        </activity>
    </application>

</manifest>
